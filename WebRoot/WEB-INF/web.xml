<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>Web_blog</display-name>
  <filter>
    <filter-name>EncodingFilter</filter-name>
    <filter-class>com.jhdx.filter.EncodingFilter</filter-class>
  </filter>
  <servlet>
    <servlet-name>articleServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.articleServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginTZServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.LoginTZServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginEscServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.LoginEscServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CategoryServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.CategoryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CommentServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.CommentServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegesiterServlet</servlet-name>
    <servlet-class>com.jhdx.servlet.RegesiterServlet</servlet-class>
  </servlet>







  <filter-mapping>
    <filter-name>EncodingFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <servlet-mapping>
    <servlet-name>articleServlet</servlet-name>
    <url-pattern>/articleServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginTZServlet</servlet-name>
    <url-pattern>/LoginTZServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginEscServlet</servlet-name>
    <url-pattern>/LoginEscServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoryServlet</servlet-name>
    <url-pattern>/CategoryServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CommentServlet</servlet-name>
    <url-pattern>/CommentServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegesiterServlet</servlet-name>
    <url-pattern>/RegesiterServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>